/* pages/history/index.wxss */


.article{
    background-color: #EBEBEB;
}
.topic{
  background-color: #F7F7F7;
  margin-top: 15rpx;
  padding: 20rpx;
}
.topic_title{
  color: #000;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
 
}
.topic_content{
  margin-top: 10rpx;
  color: #383845;
  font-size: 30rpx;
  line-height: 44rpx;
 
}
.topic_meta{
  padding: 50rpx 0 0; 
  display: flex;
}

.meta_item{
  display: flex;
  line-height: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.meta_icon{
  margin-right: 5rpx;
}
.meta_icon image{
  width: 30rpx;
  height: 30rpx;
}
.meta_text{
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999;
  overflow:hidden;
}
.topic_meta .meta_item_date{
  width: 320rpx;
}
.meta_item_view{
  width: 88rpx;
}
.meta_item_comment{
  width: 88rpx;
}
.topic_meta .meta_item_like{
  width: 88rpx;
}
.meta_more{
  margin-left: auto;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #7a81b1;
}