/* pages/collect/index.wxss */
.my-collect{
    background-color: #FAFAFA;
    width: 100%;
    height: 35px;
    line-height: 35px;
    text-align: center;
    font-size: 20px;
    margin-bottom: 20px;
    color: #F4A460;
    border: 1px solid #FAFAFA;
    border-radius: 7rpx;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08);
}
page{
    background-color: #EBEBEB;
}
.topic{
  background-color: #FFFFFF;
  margin-top: 15rpx;
  padding: 20rpx;
}
.topic_title{
  color: #000;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
 
}
.topic_content{
  margin-top: 10rpx;
  color: #383845;
  font-size: 30rpx;
  line-height: 44rpx;

}
.topic_meta{
  padding: 50rpx 0 0; 
  display: flex;
}

.meta_item{
  display: flex;
  line-height: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.meta_icon{
  margin-right: 5rpx;
}
.meta_icon image{
  width: 30rpx;
  height: 30rpx;
}
.meta_text{
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999;
  overflow:hidden;
}
.topic_meta .meta_item_date{
  width: 320rpx;
}
.meta_item_view{
  width: 88rpx;
}
.meta_item_comment{
  width: 88rpx;
}
.topic_meta .meta_item_like{
  width: 88rpx;
}
.meta_more{
  margin-left: auto;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #7a81b1;
}