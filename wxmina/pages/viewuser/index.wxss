/* pages/vieuser/index.wxss */

page{
    background-color: #E3E3E3;
    height: 100%;

}
.ava{
    margin-bottom: 50rpx;
    margin-top: 30rpx;
}
.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    background-color: #FFFFFF;
    margin: 20rpx auto;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08);
    align-items: center;
}
.avatar image{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%; 
}

.item{
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx 
}
.item1{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #FFFFFF;
    line-height: 100rpx;
    margin: auto;
    text-align: center;
}

.item2{
    width: 60%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    text-align: center;
    margin: auto;
}
