/* pages/reply/index.wxss */
.my-collect{
    background-color: #F2F2F2;
    width: 100%;
    height: 35px;
    line-height: 35px;
    text-align: center;
    font-size: 20px;
    margin-bottom: 20px;
    color: #F4A460;

}
.article{
    background-color: #EBEBEB;
}
.topic{
  background-color: #F7F7F7;
  margin-top: 15rpx;
  padding: 20rpx;
}
.topic_title{
  color: #000;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 50rpx;
  margin-left: 8rpx;
 
}
.topic_content{
  margin-top: 10rpx;
  color: #383845;
  font-size: 30rpx;
  line-height: 44rpx;
  margin-left: 50rpx;
 
}
.topic_meta{
  padding: 20rpx 0; 
  display: flex;
  justify-content: center;
}

.meta_item{
  display: flex;
  line-height: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.meta_icon{
  margin-right: 5rpx;
}
.meta_icon image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 10%;
}
.name{
  font-size: 24rpx;
  
}
.time{
    font-size: 20rpx;
    color: #999;
}

.reply{
    margin-top: 25rpx;
}
.content{
    border: 1px #FFFFFF solid;
    background-color: #FFFFFF;
    margin-top: 10rpx;
    border-radius: 10rpx;
    box-shadow: 0 2px 2px 0 rgba(1,0,0,0.16), 0 0 0 1px rgba(1,0,0,0.08); 
}
.topic_meta .meta_item_date{
  width: 320rpx;
}
.meta_item_view{
  width: 88rpx;
}
.meta_item_comment{
  width: 88rpx;
}
.topic_meta .meta_item_like{
  width: 88rpx;
}
.meta_more{
  margin-left: auto;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #7a81b1;
}


@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

